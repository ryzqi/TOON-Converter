{
  "name": "toon-converter",
  "version": "1.0.0",
  "description": "TOON 格式转换器 - JSON 与 TOON 双向转换工具",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build && electron-builder",
    "build:win": "tsc --noEmit && vite build && electron-builder --win portable",
    "build:dir": "tsc --noEmit && vite build && electron-builder --win --dir",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@toon-format/toon": "^0.7.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.toonformat.converter",
    "productName": "TOON Converter",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico",
      "sign": null
    },
    "portable": {
      "artifactName": "TOON-Converter-Portable.exe"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ]
  }
}

